<h3>Edit Place</h3>
<form method="POST" action="/places/{{_id}}">
    <label>Name:</label>
    <input type="text" name="name" value="{{name}}">
    <label>Description:</label>
    <input type="text" name="type" value="{{type}}">
    <label>Address</label>
        <input type="text" name="latitude" id="latitude" value="{{location.coordinates.[0]}}">
        <input type="text" name="longitude" id="longitude" value="{{location.coordinates.[1]}}">
    <button type="submit" id="submit-edit">Edit</button>
</form>